ALTER SESSION SET CURRENT_SCHEMA = NGA;

CREATE TABLE USERS (
    USER_ID NUMBER,
    USER_NAME varchar(255),
    PASSWORD varchar(255),
    CREATED_AT DATE
);

create sequence USER_ID_SEQUENCE start with 1000;

CREATE TABLE PRIVILEGE (
    PRIVILEGE_ID NUMBER,
    PRIVILEGE_NAME varchar(255),
    CREATED_AT DATE
);

INSERT INTO NGA.SERVICE_PRIVILEGE VALUES (2001, 'ACCESS_BL_SERVICE', SYSDATE);
INSERT INTO NGA.SERVICE_PRIVILEGE VALUES (2002, 'ACCESS_POI_SERVICE', SYSDATE);
INSERT INTO NGA.SERVICE_PRIVILEGE VALUES (2003, 'CREATE_CUSTOMER_PROFILE', SYSDATE);

CREATE TABLE NGA.USER_PRIVILEGE (
    USER_PRIVILEGE_ID NUMBER,
    USER_ID NUMBER,
    PRIVILEGE_ID NUMBER,
    CREATED_AT DATE
);

INSERT INTO NGA.USER_PRIVILEGE VALUES (5001, 1001, 2001, SYSDATE);
INSERT INTO NGA.USER_PRIVILEGE VALUES (5002, 1001, 2002, SYSDATE);
INSERT INTO NGA.USER_PRIVILEGE VALUES (5003, 1001, 2003, SYSDATE);